{
  "name": "ai-image-generator-desktop",
  "version": "1.0.0",
  "description": "AI 图片生成器桌面应用 - 基于 Electron + React + Bootstrap 构建",
  "main": "desktop-app.js",
  "homepage": "./",
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "server": "node server/index.js",
    "dev-full": "node start-dev.js",
    "dev-web": "concurrently \"npm run server\" \"npm start\"",
    "electron": "electron .",
    "electron-dev": "concurrently \"npm start\" \"wait-on http://localhost:3000 && electron .\"",
    "desktop": "npm run build && npx electron .",
    "desktop-dev": "NODE_ENV=development npx electron .",
    "desktop-start": "npm run build && npx electron .",
    "desktop-quick": "npx electron .",
    "app": "node start-desktop.js",
    "dev": "npm run desktop-dev",
    "launch": "node start-desktop.js",
    "electron-pack": "npm run build && electron-builder",
    "preelectron-pack": "npm run build",
    "dist": "npm run build && electron-builder --publish=never",
    "dist-mac": "npm run build && electron-builder --mac",
    "dist-win": "npm run build && electron-builder --win",
    "dist-linux": "npm run build && electron-builder --linux"
  },
  "build": {
    "appId": "com.aitools.image-generator",
    "productName": "AI 图片生成器",
    "directories": {
      "output": "dist"
    },
    "files": [
      "build/**/*",
      "desktop-app.js",
      "api-service.js",
      "public/preload.js",
      "public/logo.svg",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "keywords": [
    "electron",
    "react",
    "bootstrap"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.4.3",
    "concurrently": "^7.6.0",
    "electron-builder": "^23.6.0",
    "http-proxy-middleware": "^3.0.5",
    "react-scripts": "5.0.1",
    "wait-on": "^7.0.1"
  },
  "dependencies": {
    "bootstrap": "^5.2.3",
    "cors": "^2.8.5",
    "electron": "^38.1.2",
    "express": "^5.1.0",
    "node-fetch": "^2.7.0",
    "react": "^18.2.0",
    "react-bootstrap": "^2.7.0",
    "react-dom": "^18.2.0",
    "web-vitals": "^3.1.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
